{
    "manifest_version": 2,
    "short_name": "Cha-Cha",
    "name": "Cha-Cha Savings",
    "description": "Save more. Buy less. Prompts you to invest before online spending. Helps encourage long-term savings.",
    "version": "1.0",
    "author": "Nick Clear",
    "permissions": [
        "activeTab",
        "<all_urls>"
    ],
    "browser_action": {
        "default_title": "Cha-Cha"
    },
    "icons": {
        "50": "icon50.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["tingle/tingle.min.css", "modal.css"],
            "js": ["tingle/tingle.min.js", "content.js"]
        }
    ],
    "web_accessible_resources": [
        "tingle/tingle.min.css", "tingle/tingle.js"
    ]
}